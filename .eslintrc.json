{
  "extends": [
    "airbnb",
    "prettier",
    "prettier/react"
  ],
  "plugins": ["react", "prettier"],
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "jest": true
  },
  "rules": {
    "prettier/prettier": ["error", {
      "singleQuote": true,
      "trailingComma": "es5",
      "endOfLine": "auto",
      "printWidth": 100
    }],
    "max-depth": ["warn", 4],
    "id-length": ["warn", {
      "exceptions": ["i", "j"],
      "min": 2
    }],
    "no-lonely-if": ["error"],
    "no-plusplus": ["error", {
      "allowForLoopAfterthoughts": true
    }],
    "react/state-in-constructor": ["off"],
    "jsx-a11y/href-no-hash": ["off"],
    "react/jsx-props-no-spreading": ["off"]
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "detect"
    }
  }
}